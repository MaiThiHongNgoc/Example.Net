@model IEnumerable<ComicSystem.Models.ComicBook>

<h1>Comic Books</h1>

<!-- Link to Create New Comic Book -->
<a asp-action="CreateComicBook" class="btn btn-primary">Create New Comic Book</a>
<a asp-action="RentalIndex" class="btn btn-info">Rent Comic Book</a>
<a asp-action="RegisterCustomer" class="btn btn-info">RegisterCustomer</a>

@if (Model == null || !Model.Any())
{
    <p>No comic books found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price/Day</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.PricePerDay</td>
                    <td>
                        <!-- Links to Edit and Delete comic books -->
                        <a asp-action="EditComicBook" asp-route-id="@item.ComicBookID" class="btn btn-warning btn-sm">Edit</a> |
                        <a asp-action="DeleteComicBook" asp-route-id="@item.ComicBookID" class="btn btn-danger btn-sm" 
                           onclick="return confirm('Are you sure you want to delete this comic book?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
