@model ComicSystem.Models.Rental

@{
    ViewData["Title"] = "Rental Details";
}

<h2>Rental Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Customer:</dt>
        <dd>@Model.Customer.FullName</dd>
        <dt>Rental Date:</dt>
        <dd>@Model.RentalDate.ToShortDateString()</dd>
        <dt>Return Date:</dt>
        <dd>@Model.ReturnDate.ToShortDateString()</dd>
        <dt>Status:</dt>
        <dd>@Model.Status</dd>
    </dl>

    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
